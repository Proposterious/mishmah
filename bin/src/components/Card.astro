---
import { Image } from 'astro:assets';
interface Props {
	title: string;
	type: string | null;
	body: string;
	slug?: string;
	imageSrc: string;
	imageAlt: string | null;
}

const { slug = '', title, type, body, imageSrc, imageAlt } = Astro.props;
---

<card class='bg-gradient-to-t from-slate-100 to-inherit dark:from-slate-900 dark:to-zinc-600 max-w-xs p-8 rounded-md dark:bg-gray-900 dark:text-gray-50 | group transition-all duration-300 shadow-amber-300 shadow-md hover:shadow-xl hover:p-6'>
	<a href={`/blog/${slug}`} class="">
		<Image src={imageSrc} alt={imageAlt} width={60} height={200} class="object-cover object-center w-full rounded-md h-72 dark:bg-gray-500" />
		<span class="block mt-4 mb-2">
			<span class="block text-xs font-medium uppercase dark:text-violet-400 tracki">{type}</span>
			<h2 class=`text-xl font-semibold line-clamp-1 group-hover:line-clamp-2`>{title}</h2>
		</span>
		<p class="dark:text-gray-100 line-clamp-2 group-hover:snap-end">{body}</p>
	</a>
</card>