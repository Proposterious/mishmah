---
import { Icon } from "astro-icon/components";

interface Props {
	alt: string;
    icon?: string;
    href?: string;
}

const { icon = "logo", alt, href } = Astro.props;
---

<span class="w-full flex flex-row space-x-2 rounded-full">
    <Icon href={href} name={icon} class="w-6 h-6 my-auto" />
    <a href={href} class="no-underline">{alt}</a>
</span>